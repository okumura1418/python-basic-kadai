        "# 台形の寸法（単位：cm）\n",
        "upper_base = 10\n",
        "lower_base = 20\n",
        "height = 5\n",
        "\n",
        "# 面積の計算（公式：（上辺＋下辺）× 高さ ÷ 2）\n",
        "area = (upper_base + lower_base) * height / 2\n",
        "\n",
        "# 結果の出力（単位付き）\n",
        "print(f\"{area}cm²\")\n"
      ]
    }
  ]
